<h1 class="title">
  <%= @post.title %>
</h1>

<p class="date">
  submitted <%= time_ago_in_words(@post.created_at) %> ago
  <%= link_to 'Edit', edit_post_path(@post)%>
  <%= link_to 'delete', post_path(@post), method:  :delete, data:{confirm: 'are you sure'}%>
</p>

<p class="body">
  <%= @post.body %> <br>
  <%= @comments.count%> commentaires
</p>

<% if user_signed_in? %>
<div id="bloccomments">
  <h5> Commenter:</h5>
  <%= render "comments/form"%>

  <% @comments.each do |com| %>
  <div class="row">
    <%if com.user_id==current_user.id || com.user_id==@post.user_id%>
    <div class="col-md-9">
      <p><%= com.body %> <br> like</p>
    </div>

    <div class="col-md-1">
      <%= link_to('like',root_path) %>
    </div>
    <div class="col-md-2">

    </div>
        <% else %>

          <div class="col-md-2">

          </div>

          <div class="col-md-9">
            <p><%= com.body %> <br> like
            </div>

            <div class="col-md-1">
              <%= link_to('like',root_path) %>
            </div>
      <% end %>
  </div>
  <% end %>
</div>
<% end %>
