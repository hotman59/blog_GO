<% if Like.where(comment_id:@com.id).where(user_id:current_user.id).count <1 %>
<%= link_to('like',likes_path(user_id: current_user.id, comment_id: @com.id, post_id:@post.id ), method:'post', remote:true) %>
<% elsif Like.where(comment_id:@com.id).where(user_id:current_user.id).count >0 %>
<%= link_to('unlike',like_path(user_id: current_user.id, comment_id: @com.id, post_id:@post.id), method:'delete', remote:true) %>
<% end %>
