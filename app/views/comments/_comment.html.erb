<div class="comment clearfix">
  <div class="comment_content">
    <p class="comment_name"><strong> <%= User.find(comment.user_id).username %></strong> </p>
    <p class="comment_body"> <%= comment.body %></p>
    <p class="comment_time"> <%= time_ago_in_words(comment.created_at) %> ago </p>
  </div>
<% if current_user.id==comment.user_id || current_user.admin %>
  <p> <%=link_to 'Supprimer', post_comment_path(comment), method: :delete, class: "button", data:{confirm: 'are you sure delete comment'}%></p>
  <% end %>
</div>
